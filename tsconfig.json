{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "jsx": "react-jsx",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "sourceMap": true,
    "pretty": true,
    "noImplicitAny": true,
    "types": ["node"]
  },
  "exclude": ["node_modules", "**/node_modules/*"],
  "include": [
    "**/*ts",
    "**/*js"
  ]
}
